<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>
    <style name="Base.Widget.AppCompat.SearchView" parent="android:Widget">
        <item name="searchIcon">@drawable/ic_search_white_48dp</item>
        <item name="closeIcon">@drawable/ic_delete_white_48dp</item>
    </style>
    <style name="SwitchCompatStyle" >
        <item name="thumbTint">@color/selector_switch_btn</item>
        <item name="trackTint">@color/selector_switch_btn</item>
    </style>
</resources>
